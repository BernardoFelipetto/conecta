<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Conecta</title>
</head>
<body>
  <h1>Empresas</h1>
  <% @companies.each do |company| %>
  <b>Nome:</b> <%= company.name %><br>
  <b>Tamanho:</b> <%= company.size %><br>
  <b>Segmentos:</b> <% company.segments.each do |segment| %>
  <%= segment.name + "; " %>
  <% end %>
  <b>Perfil:</b> <% company.company_types.each do |type| %>
  <%= type.name + "; " %>
  <% end %>
  <b>Capacidades:</b> <% company.competences.each do |competence| %>
  <%= competence.name + "; " %>
  <% end %>

  <br><br>
  <% end %>

  <% if @error != [] %>
  <%= @error %>
  <% end %>

</body>
</html>
