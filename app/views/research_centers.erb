<% @institution.each do |rc_searched| %>
<div class="Card">
  <% rating = 0 %>
  <div class="CardResearchNav">
    <h1><%= rc_searched.name %></h1>
  </div>
  <div class="CompanyCompetences">
    <ul class="CompetenceList">
      <% rc_searched.featured_competences.each_with_index do |rc_searched_competence,index| %>
        <% rating = rc_searched_competence.competence_value_calculated_integer  %>
      <li class="ItemsFeatured ">
        <div class="ItemText"><%= rc_searched_competence.competence.name %></div>
        <div class="ItemStar">
          <% if rating > 0 %>
        <% for n_of_stars in (1..5) %>
          <i class="material-icons u-colorGold"><%=n_of_stars <= rating ? "star" : "star_border"%></i>
        <% end %>
        <% end %>
        </div>
      </li>
      <% end %>
    </ul>
    <% if rating > 0 %>
    <div class="RatingExplanation">
      <i class="material-icons u-colorGold">star</i> Nível de competência informado pela empresa
    </div>
    <% end %>
  </div>
  <div class="FooterCardSecondary">
    <% if(rc_searched.contact) %>
    <div class="FooterCardSecondaryItem">
      <b>Nome de Contato: </b>  <%= rc_searched.contact.contact_name || ""  %> <br>
    </div>
    <div class="FooterCardSecondaryItem">
      <b>  Email: </b>  <a href=mailto:'"<%=@email%>"'><%=rc_searched.contact.email%></a>
    </div>
    <div class="FooterCardSecondaryItem">
      <b>Telefone de Contato: </b>  <%= rc_searched.contact.phone %>
    </div>
    <div class="FooterCardSecondaryItem">
      <%@site_url = rc_searched.contact.site%>
      <b>Site: </b>  <a class="URL" href=<%= @site_url %> target="_blank"> <%= @site_url %></a>
    </div>
    <% end %>
  </div>
  <div class="FooterCardPrimay">
    <div class="BoxButtonCard">
      <div class="Button u-widthMedium ButtonContact" onclick="showModal('<%="#{rc_searched.id}"%>', '<%="#{rc_searched.name}"%>');" id="<%='ButtonContact'"#{rc_searched.id}"%>">contato</div>
      <div class="Button u-widthMedium ButtonSeeMore">ver mais</div>
    </div>
  </div>
  <div class="CardSecondary">
    <div class="CompanyDescription">
      <%= rc_searched.description%>
    </div>
  </div>
  </div>
  <% end %>
