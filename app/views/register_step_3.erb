<h2>Segmentos <b class="u-colorRed">*</b></h2>

<div class="BoxSegments">
  <%@segment.each do |segment|%>
  <p class="u-marginXSmall">
    <input type="checkbox" id='<%="segment_#{segment.id}"%>' name="segment_list[]" value="<%=segment.id%>"/>
    <label for='<%="segment_#{segment.id}"%>'><%=segment.name%></label>
  </p>
  <%end%>
</div>
